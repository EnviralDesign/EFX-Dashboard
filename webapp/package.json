{
  "name": "efx_dashboard",
  "version": "0.1.0",
  "main": "./build/electron/main.js",
  "scripts": {
    "dump": "dump-stlite-desktop-artifacts",
    "serve": "cross-env NODE_ENV=production electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "files": [
      "build/**/*",
      "data/**/*",
      ".streamlit/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "portable"
    }
  },
  "description": "An Electron application wrapper of the EnviralFX Dashboard app built in streamlit",
  "author": "EnviralFX (Lucas Morgan)",
  "devDependencies": {
    "@stlite/desktop": "^0.58.6",
    "cross-env": "^7.0.3",
    "electron": "30.0.8",
    "electron-builder": "^24.13.3"
  },
  "stlite": {
    "desktop": {
      "files": [
        "app.py",
        "menu.py",
        "utils.py",
        "pages/*.py",
        "data/*",
        ".streamlit/*"
      ],
      "requirementsTxtFiles": ["requirements.txt"],
      "embed": true,
      "nodeJsWorker": true,
      "nodefsMountpoints": {
        "/mnt": "."
      },
      "entrypoint": "app.py"
    }
  }
}